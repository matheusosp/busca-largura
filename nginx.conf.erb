worker_processes 1;

events {
  worker_connections 1024;
}

http {
  include mime.types;
  default_type application/octet-stream;
  sendfile on;
  keepalive_timeout 65;

  server {
    listen <%= ENV['PORT'] %>;

    location / {
      root /app/public;
      index index.html;
      try_files $uri $uri/ /index.html =404;
    }
  }
}
